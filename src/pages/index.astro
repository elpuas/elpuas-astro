---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { NAVIGATION_QUERY } from '../queries/navigation';
import { FRONTPAGE_QUERY } from '../queries/frontpage';
import { fetchGraphQL } from '../utils/fetch-graphql';

const menu = await fetchGraphQL(NAVIGATION_QUERY);
const data = await fetchGraphQL(FRONTPAGE_QUERY);
const hero = data.frontPage.content[0];
const bottom = data.frontPage.content.slice(-1)[0];

const heroTopData = {
	title: hero.heading.value,
	subtitle: hero.eyebrow,
	ctaText: 'Learn More',
	ctaLink: '/about',
	classHeadings: 'h5',
};

const bottomData = {
	title: bottom.heading.value,
	subtitle: bottom.eyebrow,
	ctaText: 'Let\'s Talk',
	ctaLink: '/lets-talk',
	headingType: 'h2',
	classHeadings: 'h5',
};

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header navigationItems={menu.navigation.menu} />
		<main>
			<Hero heroData={heroTopData} className={hero?.heroAlign} />
			<Hero heroData={bottomData} className={`secondary ${bottom?.heroAlign}`} />
		</main>
		<Footer />
	</body>
</html>
