---
import Button from './Button.astro';
import Heading from './Heading.astro';
import { StructuredText } from '@datocms/astro/StructuredText';

export interface Props {
    heroData: {
        title: any;
        subtitle: string;
        ctaText: string;
        ctaLink: string;
        headingLevel?: string;
        headingClassName?: string;
    };
    className?: string;
}

const { heroData, className } = Astro.props;

---

<section class={`hero ${className ? className : ''}`}>
    <Heading className={heroData.headingClassName} level={heroData.headingLevel}>{heroData.subtitle}</Heading>
    <StructuredText data={heroData.title} />
    <Button label={heroData.ctaText} href={heroData.ctaLink} />
</section>

<style>
    .hero {
        display: flex;
        flex-direction: column;
        margin: var(--elpuas-preset-margin-xxxl-large) 0;

        .h5 {
            text-transform: uppercase;
            font-weight: var(--elpuas-preset-fontweight-regular);
            letter-spacing: normal;
        }

        p,
        strong {
            font-size: var(--elpuas-preset-fontsize-h1);
            font-weight: var(--elpuas-preset-fontweight-bold);
            letter-spacing: -3.5px;
            line-height: 1.25;
            margin: var(--elpuas-preset-margin-xl) 0;
        }
        strong {
            color: var(--elpuas-preset-color-secondary);
        }
        &:is(.alignLeft) {
            justify-content: flex-start;
        }

        &:is(.secondary) {
            p,
            strong {
                font-size: var(--elpuas-preset-fontsize-h2);
                letter-spacing: -2.5px;
                max-width: 90%;
            }
        }
    }
</style>