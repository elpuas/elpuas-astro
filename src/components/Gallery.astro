---
import { Image } from '@datocms/astro/Image';
const { images } = Astro.props;
---
<section class="gallery">
    {images.map(image => (
        <div class="gallery-item">
            <Image data={image.responsiveImage} />
            <span>{image.responsiveImage.alt}</span>
        </div>
    ))}
</section>

<style>
    .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
        margin: var(--elpuas-preset-space-xl) 0;

        .gallery-item {
            width: 100%;
            height: 100%;
            text-align: center;
            position: relative;

            img {
                width: 100%;
                height: 100% !important;
                object-fit: cover;
                object-position: center top;
                min-height: 384px;
            }

            span {
                display: block;
                position: absolute;
                width: max-content;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                opacity: 1;
                margin-top: var(--elpuas-preset-space-xs);
                padding: var(--elpuas-preset-space-xs) var(--elpuas-preset-space-sm);
                font-size: var(--elpuas-preset-fontsize-base);
                color: var(--elpuas-preset-color-tertiary);
                background-color: var(--elpuas-preset-color-primary);
            }
        }
    }  
</style>