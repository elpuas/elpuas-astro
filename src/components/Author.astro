---
import Logo from './Logo.astro'

export interface Props {
    author?: string;
    date?: string;
}

const { author, date } = Astro.props;

---
<author>
    <span class="avatar">
        <Logo />
    </span>
    <span class="name">{ author || 'El Puas'}</span>
    { date && <span class="date">{date}</span> }
</author>

<style>
    author {
        display: flex;
        gap: 0.5rem;
        align-items: center;
        .avatar {
            svg {
                fill: var(--elpuas-preset-color-primary);
                width: 24px;
                height: 24px;
            }
        }

        .name,
        span {
            color: var(--elpuas-preset-color-primary);
            line-height: 1;
        }
    }
</style>